<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.custom.i18n.resources"
		value="application" />

	<!-- default package -->
	<package name="webapp-package" extends="hibernate-default"
		namespace="/">
		<interceptors>
			<interceptor name="authentication"
				class="interceptor.LoginInterceptor" />
			<interceptor-stack name="securityStack">
				<interceptor-ref name="authentication" />
				<interceptor-ref name="hibernateSessionInterceptor" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="securityStack" />

		<global-results>
			<result name="login">/WEB-INF/pages/auth/login.jsp</result>
			<result name="error">/WEB-INF/pages/java_error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping result="error"
				exception="java.lang.exception" />
		</global-exception-mappings>

		<action name="login" class="action.LoginAction" method="login">
			<interceptor-ref
				name="defaultStackHibernateStrutsValidation" />
			<result name="success" type="redirect">/</result>
			<result name="input">/WEB-INF/pages/auth/login.jsp</result>
		</action>

	</package>

	<!-- stock package -->
	<package name="stock-package" extends="webapp-package"
		namespace="/stock">
	</package>

	<!-- producer package -->
	<package name="producer-package" extends="webapp-package"
		namespace="/producer">
	</package>

	<!-- goods package -->
	<package name="goods-package" extends="webapp-package"
		namespace="/goods">
	</package>

	<!-- supplier package -->
	<package name="supplier-package" extends="webapp-package"
		namespace="/supplier">
	</package>

	<!-- category package -->
	<package name="category-package" extends="webapp-package"
		namespace="/category">
	</package>

	<!-- report package -->
	<package name="report-package" extends="webapp-package"
		namespace="/report">
	</package>

	<!-- account package -->
	<package name="account-package" extends="webapp-package"
		namespace="/account">
		<action name="logout" class="action.AccountAction"
			method="logout">
			<result name="success" type="redirect">/</result>
		</action>
		<action name="change-password" class="action.AccountAction"
			method="goPasswordForm">
			<result name="success">/WEB-INF/pages/auth/password_form.jsp</result>
		</action>
		<action name="change" class="action.AccountAction"
			method="changePassword">
			<interceptor-ref name="securityStack" />
			<interceptor-ref
				name="defaultStackHibernateStrutsValidation" />
			<result name="input">/WEB-INF/pages/auth/password_form.jsp</result>
			<result name="success" type="redirect">/</result>
		</action>
	</package>

</struts>