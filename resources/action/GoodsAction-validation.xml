<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" 
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="goodsBean.code">
		<field-validator type="requiredstring">
			<message key="errors.goodsBean.code" />
		</field-validator>
	</field>
	<field name="goodsBean.category.id">
		<field-validator type="required">
			<message key="errors.goodsBean.category" />
		</field-validator>
	</field>
	<field name="goodsBean.producer.id">
		<field-validator type="required">
			<message key="errors.goodsBean.producer" />
		</field-validator>
	</field>
	<field name="goodsBean.supplier.id">
		<field-validator type="required">
			<message key="errors.goodsBean.supplier" />
		</field-validator>
	</field>
	<field name="goodsBean.name">
		<field-validator type="requiredstring">
			<message key="errors.goodsBean.name" />
		</field-validator>
	</field>
	<field name="goodsBean.exportPrice">
		<field-validator type="required">
			<message key="errors.goodsBean.exportPrice" />
		</field-validator>
	</field>
	<field name="goodsBean.importPrice">
		<field-validator type="required">
			<message key="errors.goodsBean.importPrice" />
		</field-validator>
	</field>
	<field name="goodsBean.unit">
		<field-validator type="requiredstring">
			<message key="errors.goodsBean.unit" />
		</field-validator>
	</field>
	<field name="goodsBean.expiration">
		<field-validator type="date">
            <param name="minExpression">${minValue}</param> <!-- will be evaluated as: Date getMinValue() -->
            <param name="maxExpression">${maxValue}</param> <!-- will be evaluated as: Date getMaxValue() -->
            <message>Ngày hết hạn phải trong khoảng từ ${min} đến ${max}</message>
        </field-validator>
	</field>
	<field name="inventoryBean.quantity">
		<field-validator type="required">
			<message key="errors.inventoryBean.quantity" />
		</field-validator>
	</field>
</validators>