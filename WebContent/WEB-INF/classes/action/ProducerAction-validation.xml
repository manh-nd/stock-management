<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" 
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="producerBean.code">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="errors.empty.producerBean.code" />
		</field-validator>
		<field-validator type="stringlength">
			<param name="trim">true</param>
			<param name="minLength">3</param>
			<param name="maxLength">6</param>
			<message key="errors.length.producerBean.code" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression"><![CDATA[[a-zA-Z0-9]+]]></param>
			<message key="errors.invalid.producerBean.code" />
		</field-validator>
	</field>
	<field name="producerBean.name">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="errors.empty.producerBean.name" />
		</field-validator>
		<field-validator type="stringlength">
			<param name="trim">true</param>
			<param name="minLength">6</param>
			<param name="maxLength">45</param>
			<message key="errors.empty.producerBean.name" />
		</field-validator>
	</field>
</validators>