<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" 
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="goodsBean.code">
		<field-validator type="requiredstring">
			<message>Bạn chưa nhập mã hàng hóa</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<param name="maxLength">8</param>
			<param name="trim">true</param>
			<message key="errors.goodsBean.code" />
		</field-validator>
	</field>
	<field name="goodsBean.category.id">
		<field-validator type="required">
			<message key="errors.goodsBean.category" />
		</field-validator>
	</field>
	<field name="goodsBean.producer.id">
		<field-validator type="required">
			<message key="errors.goodsBean.producer" />
		</field-validator>
	</field>
	<field name="goodsBean.supplier.id">
		<field-validator type="required">
			<message key="errors.goodsBean.supplier" />
		</field-validator>
	</field>
	<field name="goodsBean.name">
		<field-validator type="requiredstring">
			<message>Bạn chưa nhập tên hàng hóa</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">64</param>
			<param name="trim">true</param>
			<message>Tên hàng hóa phải từ 6 - 64 ký tự!</message>
		</field-validator>
	</field>
	<field name="goodsBean.exportPrice">
		<field-validator type="required">
			<message key="errors.goodsBean.exportPrice" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<param name="max">1000000000</param>
			<message>Giá nhập phải từ 0 - 1.000.000.000</message>
		</field-validator>
		<field-validator type="fieldexpression">
			<param name="expression"><![CDATA[goodsBean.importPrice < goodsBean.exportPrice]]></param>
			<message>Giá bán phải lớn hơn giá nhập.</message>
		</field-validator>
	</field>
	<field name="goodsBean.importPrice">
		<field-validator type="required">
			<message key="errors.goodsBean.importPrice" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<param name="max">1000000000</param>
			<message>Giá nhập phải từ 0 - 1.000.000.000</message>
		</field-validator>
		<field-validator type="fieldexpression">
			<param name="expression"><![CDATA[goodsBean.importPrice < goodsBean.exportPrice]]></param>
			<message>Giá nhập không được lớn hơn giá bán.</message>
		</field-validator>
	</field>
	<field name="goodsBean.unit">
		<field-validator type="requiredstring">
			<message key="errors.goodsBean.unit" />
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<param name="maxLength">16</param>
			<param name="trim">true</param>
			<message>Đơn vị tính phải từ 3 - 16 ký tự.</message>
		</field-validator>
	</field>
	<field name="goodsBean.expiration">
		<field-validator type="required">
			<message>Bạn chưa nhập hạn sử dụng</message>
		</field-validator>
	</field>
	<field name="inventoryBean.quantity">
		<field-validator type="required">
			<message key="errors.inventoryBean.quantity" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<param name="max">10000</param>
			<message>Số lượng phải từ 0 - 10.000</message>
		</field-validator>
	</field>
</validators>