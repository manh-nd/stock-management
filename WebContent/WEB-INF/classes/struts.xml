<struts>
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.custom.i18n.resources"
		value="application" />

	<!-- default package -->
	<package name="default-package" extends="hibernate-default"
		namespace="/">
	</package>

	<!-- stock package -->
	<package name="stock-package" extends="hibernate-default"
		namespace="/stock">
	</package>

	<!-- producer package -->
	<package name="producer-package" extends="hibernate-default"
		namespace="/producer">
	</package>

	<!-- goods package -->
	<package name="goods-package" extends="hibernate-default"
		namespace="/goods">
